<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/page2view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".CombatActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/customborder_title"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                tools:text="Gray Mouser" />

            <TextView
                android:id="@+id/character_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/customborder_title"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                tools:text="Thief 5" />


        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/hp_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/hp_max_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/hp_max"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textAlignment="center"
                android:padding="10sp"
                android:background="@drawable/customborder2"/>

            <TextView
                android:id="@+id/hp_cur_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/hp_cur"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textAlignment="center"
                android:padding="10sp"
                android:background="@drawable/customborder2"/>



        </TableRow>

        <TableRow>

            <LinearLayout
                android:id="@+id/AC_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:textAlignment="center"
                android:background="@drawable/customborder2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AC"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AC_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="17" />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TableRow
            android:id="@+id/weapon_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon_heading">

            <TextView
                android:id="@+id/weapon_heading_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/name"
                android:textColor="@color/weapon_backgroud"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_heading_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/weapon_backgroud"
                android:textSize="24sp"
                android:text= "Hit Bonus" />

            <TextView
                android:id="@+id/weapon_heading_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/weapon_backgroud"
                android:textSize="24sp"
                android:text= "@string/damage"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow
            android:id="@+id/weapon_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon">

            <TextView
                android:id="@+id/weapon_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/weapon1"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_1_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="+3" />

            <TextView
                android:id="@+id/weapon_1_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="1d4"
                tools:ignore="RtlSymmetry" />

        </TableRow>

        <TableRow
            android:id="@+id/weapon_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon">

            <TextView
                android:id="@+id/weapon_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/weapon2"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_2_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="+3" />

            <TextView
                android:id="@+id/weapon_2_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="1d4"
                tools:ignore="RtlSymmetry" />

        </TableRow>
        <TableRow
            android:id="@+id/weapon_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon">

            <TextView
                android:id="@+id/weapon_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/weapon3"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_3_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="+3" />

            <TextView
                android:id="@+id/weapon_3_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="1d4"
                tools:ignore="RtlSymmetry" />

        </TableRow>
        <TableRow
            android:id="@+id/weapon_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon">

            <TextView
                android:id="@+id/weapon_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/weapon4"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_4_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="+3" />

            <TextView
                android:id="@+id/weapon_4_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="1d4"
                tools:ignore="RtlSymmetry" />

        </TableRow>
        <TableRow
            android:id="@+id/weapon_row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/customborder_weapon">

            <TextView
                android:id="@+id/weapon_5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/weapon5"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/weapon_5_tohit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="+3" />

            <TextView
                android:id="@+id/weapon_5_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="1d4"
                tools:ignore="RtlSymmetry" />

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/button_row_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:weightSum="2">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/customborder_navigate"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/left"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/customborder_navigate"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/right"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>