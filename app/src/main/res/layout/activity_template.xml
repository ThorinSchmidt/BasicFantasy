<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/lime">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureWithLargestChild="true"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/top_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_top"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/top_section_text"
                    android:textSize="18sp"
                    tools:text="Gray Mouser" />

                <TextView
                    android:id="@+id/character_class"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_top"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/top_section_text"
                    android:textSize="18sp"
                    tools:text="Thief 5" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/lightgray"
        android:orientation="vertical">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/middle_section_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/middle_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_middle_heading"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/middle_section_header_text"
                    android:textSize="18sp"
                    tools:text="Middle Heading" />

            </TableRow>

            <TableRow
                android:id="@+id/middle_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/middle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_middle"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/middle_section_text"
                    android:textSize="18sp"
                    tools:text="Middle Content" />
            </TableRow>
        </TableLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/bottom_section_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/customborder_bottom_heading"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/bottom_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_bottom_heading"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/bottom_section_header_text"
                    android:textSize="18sp"
                    tools:text="Bottom Heading" />

            </TableRow>

            <TableRow
                android:id="@+id/bottom_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/customborder_bottom"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/customborder_bottom"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/bottom_section_text"
                    android:textSize="18sp"
                    tools:text="Bottom Content" />
            </TableRow>
        </TableLayout>

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/lime"
        android:id="@+id/button_row_navigate"
        android:layout_gravity="bottom|center"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight=".5"
            android:background="@drawable/customborder_navigate"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/left"
            android:textAlignment="center"
            android:textColor="@color/navigation_section_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight=".5"
            android:background="@drawable/customborder_navigate"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/right"
            android:textAlignment="center"
            android:textColor="@color/navigation_section_text"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>